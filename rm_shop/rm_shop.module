function rm_shop_get_filteredshops() {

    global $user;
    $zipcode = 0;
    if(isset($_SESSION['regionselect']['zip'])) $zipcode = $_SESSION['regionselect']['zip'];
    
    $rectangle['map_bounds_sw'][0] = $_GET['map_bounds_sw_lat'];
    $rectangle['map_bounds_sw'][1] = $_GET['map_bounds_sw_lng'];
    $rectangle['map_bounds_ne'][0] = $_GET['map_bounds_ne_lat'];
    $rectangle['map_bounds_ne'][1] = $_GET['map_bounds_ne_lng'];
    
    // $rectangle['map_bounds_sw'][0] = '45.272603';
    // $rectangle['map_bounds_sw'][1] = '3.951820';
    // $rectangle['map_bounds_ne'][0] = '55.327298';
    // $rectangle['map_bounds_ne'][1] = '16.783851';
    
    $filterparams = drupal_get_query_parameters();

    $shops = rm_shop_get_shop_agreements($user->uid, $zipcode, NULL, $rectangle, $filterparams);

    $html = theme('rm_shop_theme_filteredshops', array(
                    'vars' => array(
                        'shops' => $shops,
                    ),
                 ));
       
    $returnarray['html'] = $html;
    $returnarray['marker'] = array();
    $returnarray['products'] = array();
    $alluidkeys = array();
    //Get marker
    
    foreach($shops as $shop) {
        $alluidkeys[] = $shop->uid;
        $address = '';
        $image_path = '';
        if( !empty($shop->field_address[LANGUAGE_NONE][0]['thoroughfare']) &&
            !empty($shop->field_address[LANGUAGE_NONE][0]['locality']) &&
            !empty($shop->field_location[LANGUAGE_NONE][0]['lat']) &&
            !empty($shop->field_location[LANGUAGE_NONE][0]['lon']) ) {
            $address = $shop->field_address[LANGUAGE_NONE][0]['thoroughfare'];
            if(isset($shop->field_address[LANGUAGE_NONE][0]['premise']) && !empty($shop->field_address[LANGUAGE_NONE][0]['premise'])) {
                $address .= ', ' . $shop->field_address[LANGUAGE_NONE][0]['premise'];
            }
            if(!empty($shop->field_address[LANGUAGE_NONE][0]['postal_code'])) $address .= ', ' . $shop->field_address[LANGUAGE_NONE][0]['postal_code'];
            $address .= ' ' . $shop->field_address[LANGUAGE_NONE][0]['locality'];
        }
        
        if( !empty($shop->field_image[LANGUAGE_NONE][0]['uri']) ) {
            $image_path = image_style_url('mappopup_thumb', $shop->field_image[LANGUAGE_NONE][0]['uri']);
           }
        
        $returnarray['marker'][] = array(
            'name' => $shop->title,
            'url' => url('node/' . $shop->nid),
            'address' => $address,
            'lat' => $shop->field_location[LANGUAGE_NONE][0]['lat'],
            'lon' => $shop->field_location[LANGUAGE_NONE][0]['lon'],
            'type' => $shop->type,
            'marker_id' => $shop->nid,
            'image_path' => $image_path 
        );

    }
    
    $query = new EntityFieldQuery();
    $query->entityCondition('entity_type', 'node');
    $query->entityCondition('bundle', array('offer_variation'));
    $query->propertyCondition('status', 1);
    $query->propertyCondition('uid', $alluidkeys);
    $result = $query->execute();
    $matchingproducts = array();
    if(isset($result['node'])) {
        $matchingproducts = entity_load('node', array_keys($result['node']));
    }
    if(!empty($matchingproducts)) {
        foreach($matchingproducts as $matchingproduct) {
            $returnarray['products'][] = $matchingproduct->title;
        }
    }
    
    print json_encode($returnarray);
}

function rm_shop_get_commission($user_id, $seller_id) {
    //Get all shipping agreements that match the given zipcode
    $query = new EntityFieldQuery();
    $tmp = $query
        ->entityCondition('entity_type', 'node')
        ->entityCondition('bundle', array('commission_agreement'))
        ->propertyCondition('status', 1)
        ->propertyCondition('uid', $seller_id)
        ->fieldCondition('field_user_reference', 'target_id', ($user_id > 0) ? array(0, $user_id) : $user_id)
        ->execute();
    $allagreements = array();
    if(isset($tmp['node'])) $allagreements = entity_load('node', array_keys($tmp['node']));
    //Extract all uids from agreements
    $alluids = array();
    if(!empty($allagreements)) {
        foreach($allagreements as $agreementobject) {
            //if an agreement from the same seller of the same type already exists, then check if the current one is more specific or more general
            if(!empty($alluids[$agreementobject->uid][$agreementobject->type])) {
                //step through the existing entries -> should be only one
                foreach($alluids[$agreementobject->uid][$agreementobject->type] as $user_reference_key => $unimportant) {
                    //if the already written key is smaller than the current one, this means the current one is more specific
                    if($user_reference_key < $agreementobject->field_user_reference[LANGUAGE_NONE][0]['target_id']) {
                        //delete the more general one
                        unset($alluids[$agreementobject->uid][$agreementobject->type][$user_reference_key]);
                    }
                }
            }
            //write the current key
            $alluids[$agreementobject->uid][$agreementobject->type][$agreementobject->field_user_reference[LANGUAGE_NONE][0]['target_id']][] = $agreementobject;
        }
    }
    $thecommission = 0;
    if(!empty($allagreements)) {
        foreach($alluids[$seller_id]['commission_agreement'] as $user_reference_key => $agreements) {
            foreach($agreements as $agreement) {
                $thecommission = $agreement->field_commission[LANGUAGE_NONE][0]['value'];
            }
        }
    }
    return $thecommission;
}

function rm_shop_get_shop_agreements($user_id, $zipcode, $seller_id = NULL, $rectangle = NULL, $filterparams = NULL) {

    $zipcodecomponents = array();
    for($i=0; $i<strlen($zipcode); $i++) {
        $zipcodecomponents[] = substr($zipcode, 0, $i+1);
    }
    
    if(isset($zipcode) && !empty($zipcode)) {
        //Get all shipping agreements that match the given zipcode
        $query = new EntityFieldQuery();
        $query
            ->entityCondition('entity_type', 'node')
            ->entityCondition('bundle', array('shipping_agreement'))
            ->propertyCondition('status', 1);
        if(!is_null($seller_id)) $query->propertyCondition('uid', $seller_id);   
        if(!empty($zipcodecomponents)) $query->fieldCondition('field_shipping_zipcodes', 'value', $zipcodecomponents);
        $tmp = $query
            ->fieldCondition('field_user_reference', 'target_id', ($user_id > 0) ? array(0, $user_id) : $user_id)
            ->execute();
    }
    $shippingagreements = array();
    if(isset($tmp['node'])) $shippingagreements = entity_load('node', array_keys($tmp['node']));

    //Get all dispatch, pickup and payment agreements
    $query = new EntityFieldQuery();
    $query
        ->entityCondition('entity_type', 'node')
        ->entityCondition('bundle', array('dispatch_agreement', 'pickup_agreement', 'payment_agreement'))
        ->propertyCondition('status', 1);
    if(!is_null($seller_id)) $query->propertyCondition('uid', $seller_id);
    $tmp = $query
        ->fieldCondition('field_user_reference', 'target_id', ($user_id > 0) ? array(0, $user_id) : $user_id)
        ->execute();

    $otheragreements = entity_load('node', array_keys($tmp['node']));

    //Merge all
    $allagreements = array_merge($otheragreements, $shippingagreements);

    //Extract all uids from agreements
    $alluids = array();
    foreach($allagreements as $agreementobject) {
        //if an agreement from the same seller of the same type already exists, then check if the current one is more specific or more general
        if(!empty($alluids[$agreementobject->uid][$agreementobject->type])) {
            //step through the existing entries -> should be only one
            foreach($alluids[$agreementobject->uid][$agreementobject->type] as $user_reference_key => $unimportant) {
                //if the already written key is smaller than the current one, this means the current one is more specific
                if($user_reference_key < $agreementobject->field_user_reference[LANGUAGE_NONE][0]['target_id']) {
                    //delete the more general one
                    unset($alluids[$agreementobject->uid][$agreementobject->type][$user_reference_key]);
                }
            }
        }
        //write the current key
        $alluids[$agreementobject->uid][$agreementobject->type][$agreementobject->field_user_reference[LANGUAGE_NONE][0]['target_id']][] = $agreementobject;
    }
    
    $shops = array();
    
    if(!empty($alluids)) {
        
        //Filter out uids that don't have filtered agreements
        if(!empty($filterparams['delivery_options']) || !empty($filterparams['payment_types'])) {
            foreach($alluids as $seller_uid => $agreement_type) {
                if(!empty($filterparams['delivery_options'])) {
                    $delivery_option_filters = explode(',', $filterparams['delivery_options']);
                    foreach($delivery_option_filters as $delivery_option_filter) {
                        if(empty($agreement_type[$delivery_option_filter][0]) && empty($agreement_type[$delivery_option_filter][$user_id])) {
                            unset($alluids[$seller_uid]);
                        }
                    }
                }
                if(!empty($filterparams['payment_types'])) {
                    $payment_type_filters = explode(',', $filterparams['payment_types']);
                    foreach($payment_type_filters as $payment_type_filter) {
                        if(empty($agreement_type['payment_agreement'][0]) && empty($agreement_type['payment_agreement'][$user_id])) {
                            unset($alluids[$seller_uid]);
                        }
                        else {
                            $is_there = FALSE;
                            foreach($agreement_type['payment_agreement'] as $user_reference => $agreements) {
                                foreach($agreements as $agreement) {
                                    if(!empty($agreement->field_payment_types[LANGUAGE_NONE])) {
                                        foreach($agreement->field_payment_types[LANGUAGE_NONE] as $payment_type) {
                                            if($payment_type['value'] == $payment_type_filter) {
                                                $is_there = TRUE;
                                                break;
                                            }
                                        }
                                    }
                                }
                            }
                            if(!$is_there) {
                                unset($alluids[$seller_uid]);
                            }
                        }
                    }
                }
            }
        }
        
        //Filter out all uids that do not have active trading units
        $alluidkeys = array_keys($alluids);
        $relevantuids = rm_shop_filter_sellers_ready_to_sell($alluidkeys);
        
        //Filter out all uids that do not have the keyword in their product titles or profile titles
        if(!empty($filterparams['seller_name'])) {
            $orclausearray = array();
            //first find all products that have the keyword in their title
            $query = new EntityFieldQuery();
            $query->entityCondition('entity_type', 'node');
            $query->entityCondition('bundle', array('offer_variation'));
            $query->propertyCondition('title', $filterparams['seller_name'], 'CONTAINS');
            $query->propertyCondition('status', 1);
            $query->propertyCondition('uid', $alluidkeys);
            $result = $query->execute();
            $matchingproducts = array();
            if(isset($result['node'])) {
                $matchingproducts = entity_load('node', array_keys($result['node']));
            }
            foreach($matchingproducts as $matchingproduct) {
                $orclausearray[$matchingproduct->uid] = TRUE;
            }
            //now find all products that have the keyword in their profile
            $query = new EntityFieldQuery();
            $query->entityCondition('entity_type', 'node');
            $query->entityCondition('bundle', array('seller_profile'));
            $query->propertyCondition('title', $filterparams['seller_name'], 'CONTAINS');
            $query->propertyCondition('status', 1);
            $query->propertyCondition('uid', $alluidkeys);
            $result = $query->execute();
            $matchingprofiles = array();
            if(isset($result['node'])) {
                $matchingprofiles = entity_load('node', array_keys($result['node']));
            }
            foreach($matchingprofiles as $matchingprofile) {
                $orclausearray[$matchingprofile->uid] = TRUE;
            }
            $relevantuids = array_intersect($relevantuids, array_keys($orclausearray));
        }
        
        //then select all seller profiles that match the relevant uids
        if(!empty($relevantuids)) {
            $query = new EntityFieldQuery();
            $query->entityCondition('entity_type', 'node');
            $query->entityCondition('bundle', array('seller_profile'));
            $query->propertyCondition('status', 1);
            $query->propertyCondition('uid', $relevantuids);
            //if(!empty($filterparams['seller_name'])) $query->propertyCondition('title', $filterparams['seller_name'], 'CONTAINS');
            if(!empty($rectangle)) $query->fieldCondition('field_location', 'lat', $rectangle['map_bounds_sw'][0], '>');
            if(!empty($rectangle)) $query->fieldCondition('field_location', 'lat', $rectangle['map_bounds_ne'][0], '<');
            if(!empty($rectangle)) $query->fieldCondition('field_location', 'lon', $rectangle['map_bounds_sw'][1], '>');
            if(!empty($rectangle)) $query->fieldCondition('field_location', 'lon', $rectangle['map_bounds_ne'][1], '<');
            if(!empty($filterparams['seller_type'])) {
                $seller_type_explode = explode(',', $filterparams['seller_type']);
                $query->fieldCondition('field_sellercategories', 'tid', $seller_type_explode);
            }
            $result = $query->execute();
            if(isset($result['node'])) {
                $shops = entity_load('node', array_keys($result['node']));
            }
        }
        //add all agreement infos to the shop profile
        foreach($shops as $nid => $shop) {
            $shops[$nid]->agreements = $alluids[$shop->uid];
        }
    }
    
    return rm_shop_rank_shops($shops);
}

