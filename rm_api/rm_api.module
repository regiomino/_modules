    $items = array();
    $items['simplefaxcallback'] = array(
        'page callback' => 'rm_api_simplefax_callback',
        'access arguments' => array('access content'),
        'type' => MENU_NORMAL_ITEM,
    );
    $items['invokeblock'] = array(
        'page callback' => 'rm_api_invoke_block_view_ajax',
        'access arguments' => array('access content'),
