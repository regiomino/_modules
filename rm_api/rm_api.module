function rm_api_return_country_select($default = NULL, $classes = NULL, $lang = 'de') {
    $laender = rm_api_get_iso_countries($lang);
    $html = '<select';
    if(!is_null($classes)) $html .= ' class="' . $classes . '"';
    $html .= '>';
    foreach($laender as $iso => $desc) {
        $html .= '<option value="' . $iso . '"';
        if(!is_null($default) && $default == $iso) $html .= ' selected';
        $html .= '>' . $desc . '</option>';
    }
    $html .= '</select>';
    return $html;
}